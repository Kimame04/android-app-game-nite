<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/settings_title">
        <ListPreference
            android:key="settings_startup_fragment"
            android:title="@string/settings_start_fragment"
            android:entries="@array/settings_start_fragment_list"
            android:entryValues="@array/settings_start_fragment_list"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="Display">
        <SwitchPreference
            android:defaultValue="true"
            android:key="settings_animation"
            android:summaryOff="Turn on for sweeter eye candy"
            android:summaryOn="Enjoy!"
            android:title="Animations" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Notifications">
        <Preference
            android:key="settings_notifications"
            android:summary="Go to app notifications settings"
            android:title="Notification Settings" />
    </PreferenceCategory>
</PreferenceScreen>